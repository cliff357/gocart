rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // Helper Functions
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 檢查是否有待處理的邀請
    function hasPendingInvite() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/adminInvites/$(request.auth.token.email));
    }
    
    // ============================================
    // Users Collection - 只有受邀請用戶可創建
    // ============================================
    match /users/{userId} {
      allow read: if true;
      
      // 只有受邀請的用戶可以創建自己的文檔
      allow create: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       hasPendingInvite();
      
      // Admin 可以更新任何用戶，用戶可以更新自己
      allow update: if isAdmin() || 
                       (isAuthenticated() && request.auth.uid == userId);
      
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Admin Invites Collection - 特殊規則
    // ============================================
    match /adminInvites/{inviteId} {
      allow read: if true;
      
      // Admin 可以創建邀請
      allow create: if isAdmin();
      
      // 被邀請的用戶可以刪除（接受邀請時）
      allow delete: if isAdmin() || 
                       (isAuthenticated() && 
                        resource.data.email == request.auth.token.email);
    }
    
    // ============================================
    // 其他所有集合：所有人可讀，只有 Admin 可寫
    // ============================================
    match /{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}