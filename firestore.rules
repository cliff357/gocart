rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // Helper Functions
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 檢查是否有待處理的邀請
    function hasPendingInvite() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/adminInvites/$(request.auth.token.email));
    }
    
    // ============================================
    // Users Collection - 只有受邀請用戶可創建
    // ============================================
    match /users/{userId} {
      allow read: if true;
      
      // 只有受邀請的用戶可以創建自己的文檔
      allow create: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       hasPendingInvite();
      
      // Admin 可以更新任何用戶，用戶可以更新自己
      allow update: if isAdmin() || 
                       (isAuthenticated() && request.auth.uid == userId);
      
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Admin Invites Collection - 特殊規則
    // ============================================
    match /adminInvites/{inviteId} {
      allow read: if true;
      
      // Admin 可以創建邀請
      allow create: if isAdmin();
      
      // 被邀請的用戶可以刪除（接受邀請時）
      allow delete: if isAdmin() || 
                       (isAuthenticated() && 
                        resource.data.email == request.auth.token.email);
    }

    // ============================================
    // Reservations Collection - 訪客可創建預訂
    // ============================================
    match /reservations/{reservationId} {
      // 任何人都可以讀取（用於確認頁面等）
      allow read: if true;
      
      // 任何人都可以創建預訂（訪客預訂功能）
      allow create: if true;
      
      // 只有 Admin 可以更新和刪除預訂
      allow update, delete: if isAdmin();
    }

    // ============================================
    // Settings Collection - 公開讀取
    // ============================================
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ============================================
    // 其他所有集合：所有人可讀，只有 Admin 可寫
    // ============================================
    match /{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}